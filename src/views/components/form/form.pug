mixin form(className, header, descr, inputs, btnText, isModal, modalCloseClass)
  - className = className || null;
  - descr = descr || null;
  form.form(action="#" method="post" class=className)
    if isModal
      button.btn.form-close(class=modalCloseClass type="button") &times;
    h2.h2.form-header
      | !{ header }
    if descr
      p.form-descr
        | !{ descr }
    .form-body
      each input in inputs
        input.form-input(
          type=input.type
          id=input.name
          name=input.name
          placeholder=input.placeholder
        )
      p.form-agreement
        | Нажимая на кнопку, вы даете&nbsp;
        a.form-agreement(href="/agreement.pdf" target="_blank") Cогласие на обработку персональных данных
      button.btn.form-submit(type="submit") !{ btnText }
